#:import LinePlot kivy_garden.graph.LinePlot
#:import Graph kivy_garden.graph.Graph
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManager:
    transition: FadeTransition()

    LoginScreen:
        name: 'login'

    Dashboard:
        name: 'dashboard'

    GraphScreen:
        name: 'graph'

<Dashboard>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Dashboard"
            size_hint_y: None
            height: '48dp'
        Label:
            text: f"Voltage: {root.voltage}"
        Label:
            text: f"Current: {root.current}"
        Label:
            text: f"Power: {root.power}"
        Label:
            text: f"Energy: {root.energy}"
        Button:
            text: 'Go to Graphs'
            size_hint_y: None
            height: '48dp'
            on_press: root.manager.current = 'graph'

<GraphScreen>:
    graph_layout: graph_layout_id
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: graph_layout_id
            size_hint_y: 0.9
        BoxLayout:
            size_hint_y: 0.1
            Button:
                text: "Go to Dashboard"
                on_press: app.root.current = 'dashboard'
