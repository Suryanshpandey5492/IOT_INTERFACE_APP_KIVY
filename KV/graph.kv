<GraphScreen>:
    graph_layout: graph_layout
    BoxLayout:
        orientation: 'vertical'
        
        BoxLayout:
            id: graph_layout
            size_hint_y: 0.7  # Adjust as needed for your layout
            padding: 10
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1  # Adjust as needed for your layout
            padding: 10

            Button:
                text: 'Send Dummy Data'
                on_press: root.send_dummy_data()
            
            Button:
                text: 'Back to Dashboard'
                on_press: root.manager.current = 'dashboard'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2  # Adjust as needed for your layout
            padding: 10
            spacing: 10

            Label:
                text: 'Select Data Series:'
                size_hint_x: 0.3

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.7
                spacing: 5

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    CheckBox:
                        group: 'data_series'
                        on_active: root.update_selected_data_series(self, self.active, 'Voltage')
                    Label:
                        text: 'Voltage'
                        on_touch_down: if self.collide_point(*args[1].pos): root.update_selected_data_series(self, True, 'Voltage')

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    CheckBox:
                        group: 'data_series'
                        on_active: root.update_selected_data_series(self, self.active, 'Current')
                    Label:
                        text: 'Current'
                        on_touch_down: if self.collide_point(*args[1].pos): root.update_selected_data_series(self, True, 'Current')
                
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    CheckBox:
                        group: 'data_series'
                        on_active: root.update_selected_data_series(self, self.active, 'Power')
                    Label:
                        text: 'Power'
                        on_touch_down: if self.collide_point(*args[1].pos): root.update_selected_data_series(self, True, 'Power')
                
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 5
                    CheckBox:
                        group: 'data_series'
                        on_active: root.update_selected_data_series(self, self.active, 'Energy')
                    Label:
                        text: 'Energy'
                        on_touch_down: if self.collide_point(*args[1].pos): root.update_selected_data_series(self, True, 'Energy')
