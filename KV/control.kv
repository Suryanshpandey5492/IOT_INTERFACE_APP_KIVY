<Control>:
    voltage_input: voltage_input
    current_input: current_input
    power_input: power_input
    energy_input: energy_input

    MDBoxLayout:
        orientation: 'horizontal'
        
        Sidebar:  # Add the Sidebar on the left
            size_hint_x: None
            width: dp(200)

        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)
            size_hint_y: 1

            MDLabel:
                text: "Control Panel"
                font_style: 'H4'
                size_hint_y: None
                height: self.texture_size[1] + dp(20)
                halign: 'center'
                valign: 'middle'

            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(20)
                size_hint: 1, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                MDCard:
                    orientation: 'vertical'
                    padding: dp(20)
                    spacing: dp(20)
                    size_hint: 1, 1
                    elevation: 10
                    shadow_color: 0, 0, 0, 0.1

                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: self.minimum_height

                        MDLabel:
                            text: "Upload values:"
                            font_style: 'Subtitle1'
                            halign: 'left'
                            valign: 'top'
                            size_hint_x: 1
                            size_hint_y: None
                            height: self.texture_size[1] + dp(20)
                            color: 0.5, 0.5, 0.5, 1  # Subtle color
                            padding: [dp(20), dp(10)]  # Padding above and to the left

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_y: 1
                        spacing: dp(10)

                        MDTextField:
                            id: voltage_input
                            hint_text: "Voltage"
                            font_size: '16sp'
                            size_hint_x: 1

                        MDTextField:
                            id: power_input
                            hint_text: "Power"
                            font_size: '16sp'
                            size_hint_x: 1

                        MDTextField:
                            id: current_input
                            hint_text: "Current"
                            font_size: '16sp'
                            size_hint_x: 1

                        MDTextField:
                            id: energy_input
                            hint_text: "Energy"
                            font_size: '16sp'
                            size_hint_x: 1

                        MDRaisedButton:
                            text: "Submit"
                            on_release: root.submit_data(self)
                            font_size: '18sp'
                            height: '50dp'
                            md_bg_color: app.theme_cls.primary_color
                            theme_text_color: "Custom"
                            text_color: 1, 1, 1, 1
                            size_hint_y: None
                            size_hint_x: 1
