<Sidebar>:
    orientation: 'vertical'
    size_hint_x: 0.3  # Adjust the sidebar width to be dynamic
    padding: [10, 10, 10, 10]
    spacing: 20
    canvas.before:
        Color:
            rgba: 0.121, 0.161, 0.216, 1  # #1f2937
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: [0, 20, 0, 0]  # Add top padding to move everything down slightly
        spacing: 10

        MDLabel:
            text: 'Energy Monitor'
            size_hint_y: None
            height: 50
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            font_style: 'H6'  # Use a Material Design font style
            bold: True  # Make the text bold
            padding_y: 10

        BoxLayout:
            id: buttons_box
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 10

    # Spacer to push elements to the top
    BoxLayout:
        size_hint_y: 1
